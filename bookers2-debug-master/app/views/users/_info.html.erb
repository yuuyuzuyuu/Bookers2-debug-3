<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.following_user.count, "/users/#{user.id}/following" %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.follower_user.count, "/users/#{user.id}/followers" %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div><br>

<div>
  <% if user != current_user %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', unfollow_path(user.id), class: 'btn btn-success', method: :POST %>
    <% else %>
      <%= link_to 'フォローする', follow_path(user.id), class: 'btn btn-success', method: :POST %>
    <% end %>
   <% end %>
</div>